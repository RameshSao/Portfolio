<body>

  <h1>UXDraw Blog Articles</h1>
  <div class="blog-list" id="blogList">Loading...</div>

  <script>
    const query = `
      {
        user(username: "uxdraw") {
          publication {
            posts(page: 0) {
              title
              brief
              slug
              coverImage
              dateAdded
            }
          }
        }
      }
    `;

    fetch("https://gql.hashnode.com", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ query })
    })
    .then(res => res.json())
    .then(data => {
      const posts = data.data.user.publication.posts;
      const blogList = document.getElementById("blogList");
      blogList.innerHTML = "";

      posts.forEach(post => {
        const postURL = `https://uxdraw.hashnode.dev/${post.slug}`;
        blogList.innerHTML += `
          <div class="blog-card">
            <img src="${post.coverImage}" alt="${post.title}" />
            <h3>${post.title}</h3>
            <p>${post.brief}</p>
            <a href="${postURL}" target="_blank">Read more â†’</a>
          </div>
        `;
      });
    })
    .catch((err) => {
      console.error("Error loading blog posts:", err);
      document.getElementById("blogList").innerHTML = "<p>Oops! Blog failed to load.</p>";
    });
  </script>

</body>
</html>
